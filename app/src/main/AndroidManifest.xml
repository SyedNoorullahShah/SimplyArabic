<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.simplyarabic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.android.simplyarabic.MainActivity" />

        <activity
            android:name="com.example.android.simplyarabic.NumbersActivity"
            android:label="Numbers"
            android:parentActivityName="com.example.android.simplyarabic.MainActivity" />

        <activity
            android:name="com.example.android.simplyarabic.PhrasesActivity"
            android:label="Phrases"
            android:parentActivityName="com.example.android.simplyarabic.MainActivity" />

        <activity
            android:name="com.example.android.simplyarabic.FamilyActivity"
            android:label="Family"
            android:parentActivityName="com.example.android.simplyarabic.MainActivity" />

        <activity
            android:name="com.example.android.simplyarabic.ColorsActivity"
            android:label="Colors"
            android:parentActivityName="com.example.android.simplyarabic.MainActivity" />

        <activity android:name="com.example.android.simplyarabic.Home"
            android:theme="@style/HomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>